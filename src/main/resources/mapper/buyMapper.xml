<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.erp.qy.dao.BuyDao">
    <select id="buyListBy" resultType="map">
        select * from buy
        <where>
            <if test="id != null and id !=''">
                and id = #{id}
            </if>
        </where>
    </select>
    <insert id="buyAdd" >
       insert into buy VALUES (null,#{b_name},#{e_id},#{price},#{equ_vendor},#{buy_time},#{num},#{z_price})
    </insert>
    <update id="buyUpdate">
        update buy set
        b_name=#{b_name},
        e_id=#{e_id},
        price=#{price},
        equ_vendor=#{equ_vendor},
        buy_time=#{buy_time},
        num=#{num},
        z_price=#{z_price}
        where
        id=#{id}
    </update>
    <delete id="buyDelete">
        delete from buy where id = #{id}
    </delete>
    <delete id="buyDel">
        delete from buy where id in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>